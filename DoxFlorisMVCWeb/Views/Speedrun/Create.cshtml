@model DoxFlorisMVCWeb.ViewModels.CreateSpeedrunViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Speedrun</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Speedrun.snelheid" class="control-label"></label>
                <input asp-for="Speedrun.snelheid" class="form-control" />
