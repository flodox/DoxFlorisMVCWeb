@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

        <a id="manage" class="navbar-brand" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>

        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="navbar-brand btn btn-link">Logout</button>
        </form>

}
else
{
    
        <a class="navbar-brand" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
   
       
            <a class="navbar-brand" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        
}

